# FastAPI Configuration
ENVIRONMENT=development
DEBUG=True
API_TITLE=Lip Reading AI API
API_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# File Upload Configuration
MAX_UPLOAD_SIZE=100000000
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,flv,wmv

# Model Paths
MODEL_PATH=./app/ml_models/model_deploy.torchscript
CHAR2IDX_PATH=./app/ml_models/char2idx.json
IDX2CHAR_PATH=./app/ml_models/idx2char.json
MODEL_CONFIG_PATH=./app/ml_models/model_config.json

# GPU Configuration
USE_GPU=True
GPU_ID=0

# Database
DATABASE_URL=sqlite:///./lipreading.db
SQLALCHEMY_ECHO=False

# Redis/Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173","http://127.0.0.1:3000"]

# Inference Parameters
MAX_FRAMES=75
FRAME_HEIGHT=50
FRAME_WIDTH=100
FPS_TARGET=25